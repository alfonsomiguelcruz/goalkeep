<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Create Goal"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_add_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Title"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/zz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:backgroundTint="#A5A5A5"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/edit_error"
            android:textColorHighlight="@color/edit_error"
            android:textColorHint="@color/edit_error"
            android:textColorLink="@color/edit_error" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Description"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/zz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:backgroundTint="#A5A5A5"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/edit_error"
            android:textColorHighlight="@color/edit_error"
            android:textColorHint="@color/edit_error"
            android:textColorLink="@color/edit_error" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Tag"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/zz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:backgroundTint="#A5A5A5"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/edit_error"
            android:textColorHighlight="@color/edit_error"
            android:textColorHint="@color/edit_error"
            android:textColorLink="@color/edit_error" />
    </LinearLayout>
</LinearLayout>