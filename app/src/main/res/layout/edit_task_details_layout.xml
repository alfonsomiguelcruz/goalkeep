<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_edit_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_edit_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_edit_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Task Details"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_edit_task_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/check_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_edit_task_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:background="@color/white"
            android:src="@drawable/cross_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ib_edit_task_confirm"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_edit_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_edit_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/et_edit_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:backgroundTint="#A5A5A5"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textColorHighlight="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:textColorLink="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_edit_task_title_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/edit_error"
            android:textColorHighlight="@color/edit_error"
            android:textColorHint="@color/edit_error"
            android:textColorLink="@color/edit_error" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_task_time_expected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_edit_task_time_expected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Expected Date of Accomplishment"
            android:textColor="@color/grey" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_edit_task_time_expected"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_edit_task_time_expected_date"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_border"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_edit_task_time_expected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="December 31, 2024"
                    android:textColor="@color/dark_grey"
                    android:textColorHighlight="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textColorLink="@color/dark_grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_edit_task_time_expected_date"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_edit_task_time_expected_time"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_border"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_edit_task_time_expected_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:53 PM"
                    android:textColor="@color/dark_grey"
                    android:textColorHighlight="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textColorLink="@color/dark_grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_edit_task_time_expected_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/et_edit_task_time_expected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#A5A5A5"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textColorHighlight="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:textColorLink="@color/dark_grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_edit_task_time_expected_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/edit_error"
            android:textColorHighlight="@color/edit_error"
            android:textColorHint="@color/edit_error"
            android:textColorLink="@color/edit_error" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_edit_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/et_edit_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:backgroundTint="#A5A5A5"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textColorHighlight="@color/dark_grey"
            android:textColorHint="@color/dark_grey"
            android:textColorLink="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_edit_task_description_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/edit_error"
            android:textColorHighlight="@color/edit_error"
            android:textColorHint="@color/edit_error"
            android:textColorLink="@color/edit_error" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_edit_task_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:id="@+id/ll_edit_task_state"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_edit_task_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task State"
                android:textColor="@color/grey" />

            <EditText
                android:id="@+id/et_edit_task_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:backgroundTint="#A5A5A5"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/dark_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_task_priority"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_edit_task_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Priority"
                android:textColor="@color/grey" />

            <EditText
                android:id="@+id/et_edit_task_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:backgroundTint="#A5A5A5"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/dark_grey"
                android:textColorHint="@color/dark_grey"
                android:textColorLink="@color/dark_grey"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_delete_task"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/corners"
        android:backgroundTint="#B21D32"
        android:text="Delete task"
        android:textColor="#FFFFFF" />

</LinearLayout>